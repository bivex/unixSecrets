# Telegram Bot Configuration
# ⚠️  ВНИМАНИЕ: Никогда не храните реальные токены в этом файле!
# Используйте только для примера структуры
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_BOT_USERNAME=your_bot_username
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Database Configuration
DATABASE_URL=postgresql://db_user:db_password@postgres:5432/bot_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=bot_db
DATABASE_USER=db_user
DATABASE_PASSWORD=YOUR_DB_PASSWORD
DATABASE_SSL_MODE=require
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30

# Redis Cache Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_CONNECTION_POOL_SIZE=5
REDIS_CONNECTION_TIMEOUT=5

# API Keys and External Services
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY
STRIPE_SECRET_KEY=YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=YOUR_STRIPE_PUBLISHABLE_KEY
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER

# Monitoring and Logging
SENTRY_DSN=YOUR_SENTRY_DSN
LOG_LEVEL=INFO
LOG_FILE=/var/log/telegram_bot.log
METRICS_ENABLED=true
HEALTH_CHECK_TOKEN=your_health_check_token

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_SCHEDULER=true
ENABLE_CACHE=true
ENABLE_RATE_LIMITING=true

# Security Settings
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARS
ENCRYPTION_KEY=YOUR_AES256_KEY_32_CHARS_EXACTLY
SESSION_SECRET=YOUR_SESSION_SECRET
CSRF_SECRET=YOUR_CSRF_SECRET

# Email Configuration
SMTP_HOST=YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USERNAME=YOUR_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SMTP_PASSWORD
EMAIL_FROM=YOUR_EMAIL_FROM

# File Storage
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bot-files-bucket
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# Web Server Configuration
WEB_SERVER_HOST=0.0.0.0
WEB_SERVER_PORT=8080
WEB_SERVER_WORKERS=4
WEB_SERVER_TIMEOUT=30
WEB_SERVER_MAX_REQUEST_SIZE=10485760

# Admin Configuration
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD
ADMIN_EMAIL=admin@yourdomain.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-bot-backups-bucket

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_WINDOW_SECONDS=60

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100
CACHE_REDIS_PREFIX=telegram_bot:

# Notification Settings
NOTIFICATION_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL
NOTIFICATION_SLACK_TOKEN=YOUR_SLACK_BOT_TOKEN
NOTIFICATION_EMAIL_TO=alerts@yourdomain.com

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
MEMORY_LIMIT_MB=512
CPU_LIMIT=1.0

# Development Settings
DEBUG_MODE=false
DEVELOPMENT_DATABASE_URL=sqlite:///dev.db
TESTING_ENABLED=false

# Analytics Configuration
ANALYTICS_TRACKING_ID=YOUR_GA_TRACKING_ID
ANALYTICS_API_SECRET=YOUR_ANALYTICS_API_SECRET

# Payment Configuration
PAYMENT_CURRENCY=USD
PAYMENT_MIN_AMOUNT=1.00
PAYMENT_MAX_AMOUNT=1000.00
PAYMENT_PROCESSOR=stripe

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ru,es,fr,de

# Feature Specific Settings
MAX_FILE_SIZE_MB=10
MAX_MESSAGE_LENGTH=4096
COMMAND_PREFIX=/
ADMIN_COMMANDS_ENABLED=true
